<keymap>
  <global>
    <keyboard>
      <!-- Override XBMC's volume control by intercepting the volume buttons -->
      <volume_up>XBMC.RunScript(script.av-control-client,VolumeUp)</volume_up>
      <volume_down>XBMC.RunScript(script.av-control-client,VolumeDown)</volume_down>
      <volume_mute>XBMC.RunScript(script.av-control-client,Mute)</volume_mute>

      <!-- Map some unused keys to manipulate the HDMI switcher -->
      <browser_home>XBMC.RunScript(script.av-control-client,HDMI1)</browser_home>
      <launch_mail>XBMC.RunScript(script.av-control-client,HDMI2)</launch_mail>
      <leftwindows>XBMC.RunScript(script.av-control-client,HDMI3)</leftwindows>
      <f mod="ctrl">XBMC.RunScript(script.av-control-client,HDMI4)</f>

      <!-- Map the second last key on the 2nd row of the Cideko keyboard to surround mode switching -->
      <launch_app2_pc_icon>XBMC.RunScript(script.av-control-client,SurroundNext)</launch_app2_pc_icon>
    </keyboard>
  </global>
</keymap>
